<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".adminCreateVenue">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/venueCreatetext"
    android:text="Please provide the following information"
    android:textSize="20dp"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_margin="20dp"/>

    <EditText
        android:id="@+id/adminVenueName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/venueCreatetext"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Venue name"
        android:padding="20dp" />

    <EditText
        android:id="@+id/adminVenueLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminVenueName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Venue location"
        android:padding="20dp" />

    <EditText
        android:id="@+id/adminVenueSports"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminVenueLocation"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Accessible sports"
        android:padding="20dp" />

    <Button
        android:id="@+id/adminAddButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminVenueLocation"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/adminVenueSports"
        android:padding="10dp"
        android:text="Add" />


    <Button
        android:id="@+id/adminCreateVenueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminVenueSports"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="Create a venue" />

    <include
        layout="@layout/bottom_admin_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>