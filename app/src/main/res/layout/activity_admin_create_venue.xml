<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".adminCreateVenue">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/venueCreatetext"
    android:text="Please provide the following information"
    android:textSize="20dp"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_margin="20dp"/>

    <EditText
        android:id="@+id/adminVenueName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/venueCreatetext"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Venue name"
        android:padding="20dp" />

    <EditText
        android:id="@+id/adminVenueLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminVenueName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Venue location"
        android:padding="20dp" />


<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/adminCreateVenueButton"
    android:text="Create a venue"
    android:textSize="25dp"
    android:layout_below="@id/adminVenueLocation"
    android:layout_centerHorizontal="true"
    android:backgroundTint="@color/design_default_color_secondary"
    android:layout_margin="15dp"/>

    <include
        layout="@layout/bottom_admin_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>